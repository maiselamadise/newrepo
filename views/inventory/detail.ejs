<div class="cse-container">
  <div class="vehicle-detail-wrapper">

    <h1 class="welcome-heading"><%= title %></h1>

    <div class="featured-vehicle">
      <div class="vehicle-content">

        <div class="vehicle-text">
          <h2 class="vehicle-title">
            <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>
          </h2>

          <div class="vehicle-features">
            <p class="feature-item">
              <strong>Year:</strong> <%= vehicle.inv_year %>
            </p>
            <p class="feature-item">
              <strong>Color:</strong> <%= vehicle.inv_color %>
            </p>
            <p class="feature-item">
              <strong>Mileage:</strong>
              <%= new Intl.NumberFormat("en-US").format(vehicle.inv_miles) %> miles
            </p>
          </div>

          <div class="price-section">
            <span class="price-label">Price:</span>
            <span class="price-amount">
              $<%= new Intl.NumberFormat("en-US").format(vehicle.inv_price) %>
            </span>
          </div>

          <button class="own-today-btn">Own Today</button>
        </div>

        <div class="vehicle-image-section">
          <img
            src="<%= vehicle.inv_image %>"
            alt="<%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>"
            class="vehicle-main-image"
          >
        </div>

      </div>
    </div>

    <div class="bottom-sections">

      <section class="vehicle-specs">
        <h3>Vehicle Specifications</h3>

        <div class="specs-grid">
          <div class="spec-card">
            <span class="spec-icon">üöó</span>
            <span class="spec-label">Make</span>
            <span class="spec-value"><%= vehicle.inv_make %></span>
          </div>

          <div class="spec-card">
            <span class="spec-icon">üè∑Ô∏è</span>
            <span class="spec-label">Model</span>
            <span class="spec-value"><%= vehicle.inv_model %></span>
          </div>

          <div class="spec-card">
            <span class="spec-icon">üìÖ</span>
            <span class="spec-label">Year</span>
            <span class="spec-value"><%= vehicle.inv_year %></span>
          </div>

          <div class="spec-card">
            <span class="spec-icon">üé®</span>
            <span class="spec-label">Color</span>
            <span class="spec-value"><%= vehicle.inv_color %></span>
          </div>
        </div>
      </section>

      <section class="vehicle-description">
        <h3>Vehicle Description</h3>
        <p><%= vehicle.inv_description %></p>
      </section>

    </div>
  </div>
</div>
